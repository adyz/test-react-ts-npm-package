{
  "name": "test-react-ts-npm-package",
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/index.js",
    "dist"
  ],
  "scripts": {
    "clean-temp": "(rimraf ./temp || true)",
    "clean-dist": "(rimraf ./dist || true)",
    "test": "jest",
    "auto-temp-files": "node automation-scripts/automate-components.js",
    "auto-types-copy": "node automation-scripts/automate-types-location.js",
    "auto-types-path": "node automation-scripts/automate-types-dist-location.js",
    "build": "cross-env NODE_ENV=production npm run clean-dist && npm run auto-temp-files &&  webpack && npm run auto-types-copy && npm run auto-types-path && npm run clean-temp",
    "pre": "npm run build",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "npm run build && semantic-release",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adyz/test-react-ts-npm-package"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.+(ts|tsx|js)"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.1.1",
    "@types/react": "^16.4.1",
    "@types/react-dom": "^16.0.6",
    "awesome-typescript-loader": "^5.1.1",
    "commitizen": "^2.10.1",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "cz-conventional-changelog": "^2.1.0",
    "fs-extra": "^6.0.1",
    "jest": "^23.1.0",
    "node-sass": "^4.9.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.3",
    "semantic-release": "^15.6.0",
    "style-loader": "^0.21.0",
    "travis-deploy-once": "^5.0.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.4.1",
    "typescript": "^2.9.2",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
