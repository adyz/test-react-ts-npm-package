{
  "name": "test-react-ts-npm-package",
  "version": "1.0.11",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/index.js",
    "dist"
  ],
  "scripts": {
    "clean-temp": "(rimraf ./temp || true)",
    "clean-dist": "(rimraf ./dist || true)",
    "test": "echo \"Error: no test specified\" && exit 1",
    "auto-temp-files": "node automation-scripts/automate-components.js",
    "auto-types-copy": "node automation-scripts/automate-types-location.js",
    "auto-types-path": "node automation-scripts/automate-types-dist-location.js",
    "build": "cross-env NODE_ENV=production npm run clean-dist && npm run auto-temp-files &&  webpack && npm run auto-types-copy && npm run auto-types-path && npm run clean-temp",
    "pre": "cross-env NODE_ENV=production npm run clean-dist && && webpack && npm version patch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adyz/test-react-ts-npm-package"
  },
  "devDependencies": {
    "@types/react": "^16.4.1",
    "@types/react-dom": "^16.0.6",
    "awesome-typescript-loader": "^5.1.1",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "fs-extra": "^6.0.1",
    "node-sass": "^4.9.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "ts-loader": "^4.4.1",
    "typescript": "^2.9.2",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8"
  },
  "peerDependencies": {
    "react": "^15.3.2 || ^16.4.1",
    "react-dom": "^15.3.2 || ^16.4.1",
    "@types/react": "^16.4.1",
    "@types/react-dom": "^16.0.6"
  }
}
